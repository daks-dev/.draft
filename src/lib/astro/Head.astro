---
import pkg from 'package.json';
const { version } = pkg;

import { page } from '$app/stores';
const { draft } = page.get();

import app from '$app/configs/app';

interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<meta charset='UTF-8' />
<meta
  name='viewport'
  content='width=device-width'
/>
<meta
  name='robots'
  content='index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1'
/>
<link
  rel='canonical'
  href={Astro.url.href /*new URL(Astro.url.pathname, Astro.site)*/}
/>
<title>{title}</title>
<meta
  name='title'
  content={title}
/>
{
  description && (
    <meta
      name='description'
      content={description}
    />
  )
}
{
  /*
  <link
    rel='preload'
    href='/fonts/open-sans/open-sans-cyrillic-variable-wghtOnly-normal.woff2'
    as='font'
    type='font/woff2'
    crossorigin
  />
  <link
    rel='preload'
    href='/fonts/open-sans/open-sans-latin-variable-wghtOnly-normal.woff2'
    as='font'
    type='font/woff2'
    crossorigin
  />
  */
}
<link
  rel='alternate icon'
  href=`/favicon/${draft}/favicon.ico?v=${version}`
  sizes='any'
/>
<link
  rel='apple-touch-icon'
  href=`/favicon/${draft}/192.png?v=${version}`
/>
<link
  rel='icon'
  href=`/favicon/${draft}/icon.svg?v=${version}`
  type='image/svg+xml'
/>
<link
  rel='manifest'
  href='/manifest.webmanifest'
/>
<meta
  name='msapplication-config'
  content='/browserconfig.xml'
/>
{
  app.themeColor && (
    <meta
      name='theme-color'
      content={app.themeColor}
    />
  )
}
{
  app.tileColor && (
    <meta
      name='msapplication-TileColor'
      content={app.tileColor}
    />
  )
}
{
  app[draft]?.shortName && (
    <>
      <meta
        name='application-name'
        content={app[draft].shortName}
      />
      <meta
        name='apple-mobile-web-app-title'
        content={app[draft].shortName}
      />
    </>
  )
}
<link
  rel='yandex-tableau-widget'
  href='/tableau.json'
/>
<meta
  property='og:type'
  content='website'
/>
<meta
  property='og:url'
  content={Astro.url}
/>
<meta
  property='og:title'
  content={title}
/>
<meta
  property='og:description'
  content={description}
/>
{
  app[draft]?.image && (
    <meta
      property='og:image'
      content={new URL(app[draft].image, Astro.url)}
    />
  )
}
