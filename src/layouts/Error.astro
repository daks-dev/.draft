---
import pkg from 'package.json';
const { version } = pkg;

import setup from '$app/setup';
const draft = setup(Astro.request);

import '../styles/global.css';

interface Props {
  status: string;
  message: string;
}
const { status, message } = Astro.props;
---

<!doctype html>
<html lang='ru'>
  <head>
    <meta charset='utf-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <meta
      name='robots'
      content='no-index, follow'
    />
    <title>{status} ({message})</title>
    <link
      rel='alternate icon'
      href=`/favicon/${draft}/favicon.ico?v=${version}`
      sizes='any'
    />
    <link
      rel='apple-touch-icon'
      href=`/favicon/${draft}/192.png?v=${version}`
    />
    <link
      rel='icon'
      href=`/favicon/${draft}/icon.svg?v=${version}`
      type='image/svg+xml'
    />
  </head>

  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
